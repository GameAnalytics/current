%% -*- erlang -*- vim:se ft=erlang:

{erl_opts, [debug_info,
            warnings_as_errors
           ]}.

{eunit_opts,
 [verbose,
  no_tty,
  {report, {eunit_progress, [colored]}}
 ]
}.

{deps,
 [
  {party,       "", {git, "https://github.com/GameAnalytics/party.git",     {tag, "0.1.0"}}},
  {lhttpc,      "", {git, "https://github.com/GameAnalytics/lhttpc.git",    {tag, "alertlogic_1.3.1"}}},
  {jiffy,       "", {git, "https://github.com/GameAnalytics/jiffy.git",     {tag, "0.14.11"}}},
  {edatetime,   "", {git, "https://github.com/GameAnalytics/edatetime.git", {tag, "1.0.1"}}},
  {base16,      "", {git, "https://github.com/GameAnalytics/base16.git",    {tag, "1.0.0"}}}
 ]}.


{profiles,
 [
  {test,
   [
    {deps,
     [
      {meck, {git, "https://github.com/eproxus/meck.git", {tag, "0.8.6"}}}
     ]}
   ]}
  ]}.

{pre_hooks,
 [
  {eunit, "./bin/start_dynamodb.sh"}
 ]}.

{post_hooks,
 [
  {eunit, "./bin/stop_dynamodb.sh"}
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions]
}.
